<config>
    <sections>
        <ajaxlist translate="label" module="ajaxlist">
            <groups>
                <multiselect translate="label">
                    <label>Multiselect Attributes</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <select_label translate="label">
                            <label>Select label</label>
                            <comment>Default 'Select Options'.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </select_label>                        
                        <show_count translate="label">
                            <label>Show count in selector</label>
                            <comment>Show count in selector ( Selected # ) instead of items labels ( item1, item2, ... ) when selected items > N</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_count>
                        <selected_count_label translate="label">
                            <label>Selector label</label>
                            <comment>Default '# selected', # will be replaced by the selected items count.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </selected_count_label>
                    </fields>
                </multiselect>
            </groups>
        </ajaxlist>
    </sections>
</config>
