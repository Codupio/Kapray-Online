/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if ($this->canShowBlock()): ?>
    <div class="block block-layered-nav">
        <div class="block-title">
            <strong><span><?php echo $this->__('Shop By') ?></span></strong>
        </div>
        <div class="block-content">
            <?php echo $this->getStateHtml() ?>
            <?php if ($this->getLayer()->getState()->getFilters()): ?>
                <div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
            <?php endif; ?>
            <?php if ($this->canShowOptions()): ?>
                <p class="block-subtitle"><?php echo $this->__('Shopping Options') ?></p>
                <dl id="narrow-by-list">
                    <?php $_filters = $this->getFilters() ?>
                    <?php
                    foreach ($_filters as $_filter):
                        $_info = $_filter->getAttributeModel();
                        $_filter_type = "attribute";
                        if ($_info) {
                            $_id = $_info->getAttributeCode();
                            if($_id=="price") $_filter_type = "price";
                        } else {
                            $filter_name = $_filter->getItems();
                            if (isset($filter_name[0])) {
                                $_id = $filter_name[0]->getFilter()->getRequestVar();
                            }
                            if ($_id == "cat") {
                                $_filter_type = "category";
                            }
                        }
                        ?>
                        <?php
                        if ($_filter->getItemsCount() && $_filter->getItems()):
                            ?>
                            <dt  id="filter-<?php echo $_id; ?>-label"><?php echo $this->__($_filter->getName()) ?></dt>
                            <dd  id="filter-<?php echo $_id; ?>-container">
                                <?php
                                $_filter->setTemplate("dropdownfilter/filter/" . $_filter_type . ".phtml");
                                echo $_filter->getHtml();
                                ?>
                            </dd>
                            <?php
                        endif;
                        ?>
                    <?php endforeach; ?>
                </dl>
                <button id="apply-filters"><span><?php echo $this->__("Apply filters"); ?><span></button>
                            <script type="text/javascript">decorateDataList('narrow-by-list')</script>
                            <script type="text/javascript">
                                _search_query = "<?php $_q = Mage::app()->getRequest()->getParam("q"); if(trim($_q)) echo "q=" . $_q;  ?>";
                                _selected_category = "<?php if(trim($_q) && $_c = Mage::app()->getRequest()->getParam("cat"))   echo $_c;  ?>";
                            </script>
                        <?php endif; ?>
                        </div>
                        </div>
                    <?php endif; ?>
